<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <size
        android:width="100dp"
        android:height="30dp"
    />

    <stroke
        android:width="2dp"
        android:color="#878787"
    />

    <corners
        android:radius="8dp"
    />

    <padding
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp"
        />

</shape>
